<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:background="@drawable/dialog_bg_shape"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="下线通知"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/sp_16" />


        <TextView
            android:layout_below="@id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="您的账号在另一台手机登录.如非本人操作,则密码可能已泄露,建议登录后修改密码."
            android:layout_marginTop="10dp"

            android:textColor="@color/gray_333333"
            android:textSize="@dimen/sp_14" />
        
        
        
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:weightSum="2"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvActionLogout"
                android:text="退出"
                android:gravity="center"
                android:background="@drawable/button_bg_shape_white"
                android:layout_width="0dp"
                android:textSize="@dimen/sp_16"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/tvActionRelogin"
                android:text="重新登录"
                android:background="@drawable/button_bg_shape"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:layout_height="50dp" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
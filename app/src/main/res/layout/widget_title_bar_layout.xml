<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#000000"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:clickable="true">
        <!--android:background="@drawable/common_tab_bg"-->
        <ImageView
            android:id="@+id/left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/gap_5"
            android:layout_centerVertical="true"
            android:scaleType="centerInside" />
        <TextView
            android:id="@+id/left_tex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="13dp"

            />
    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="19dp"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:text="标记为已读"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:textColor="#ffffff" />
    <TextView
        android:visibility="gone"
        android:id="@+id/tvQue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:text="确定"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:textColor="#ffffff" />
    <!--android:textSize="@dimen/title_middle_text_size"-->
    <RelativeLayout
        android:id="@+id/sousuobar"
        android:layout_width="230dp"
        android:layout_height="22dp"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/left_layout"
        android:layout_marginLeft="1dp"
        android:background="@drawable/titlebar_search_one"
        android:visibility="gone">

        <!--android:background="@drawable/home_search_bg"-->


            <ImageView
                android:id="@+id/ivSearchLogo"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/titlebar_search_gray"
                />



        <EditText
            android:id="@+id/etHomeInput"
            android:layout_width="fill_parent"
            android:layout_height="22dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="寻找足迹"
            android:textColorHint="#b8b8b8"
            android:textSize="12dp" />




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp">


        <!--android:background="@drawable/common_tab_bg"-->
        <TextView
            android:id="@+id/titleBar_Right_tv"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_height="fill_parent"
            />




        <!--android:textColor="@color/white"-->
        <!--android:textSize="@dimen/title_rigth_text_size"-->


        <ImageView
            android:id="@+id/fangdajing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fangdajing"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

</RelativeLayout>
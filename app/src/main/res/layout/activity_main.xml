<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <FrameLayout
            android:id="@+id/flContainer"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#d8d8d8"/>
        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/rlHome"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivHome"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/foot_selectors"
                    android:contentDescription="足迹" />

                <TextView
                    android:id="@+id/tvHome"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivHome"
                    android:layout_marginTop="2dp"
                    android:gravity="center_horizontal"
                    android:text="足迹"
                    android:textColor="@drawable/font_selector"
                    android:textSize="15dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_xj"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/img_xj"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/xj_selectors"
                    android:contentDescription="分类" />

                <TextView
                    android:id="@+id/tx_xj"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_xj"
                    android:layout_marginTop="2dp"
                    android:gravity="center_horizontal"
                    android:text="寻迹"
                    android:textColor="@drawable/font_selector"
                    android:textSize="15dp" />
            </RelativeLayout>

            <!--<RelativeLayout
                android:id="@+id/rl_fd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/fd_img"
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/find_selectors" />

                <TextView
                    android:id="@+id/tx_fd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fd_img"
                    android:layout_marginTop="2dp"
                    android:gravity="center_horizontal"
                    android:text="发现"
                    android:textColor="@drawable/font_selector"
                    android:textSize="15dp" />
            </RelativeLayout>-->


            <RelativeLayout
                android:id="@+id/rl_wo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/w_img"
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/tou_selectors" />

                <TextView
                    android:id="@+id/tx_w"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/w_img"
                    android:layout_marginTop="3dp"
                    android:gravity="center_horizontal"
                    android:text="我的"
                    android:textColor="@drawable/font_selector"
                    android:textSize="15dp" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/home_banner"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:background="@drawable/banner_default"
        android:scaleType="centerCrop"/>

       <ImageView
           android:id="@+id/home_icon"
           android:layout_width="44dp"
           android:layout_height="44dp"
           android:layout_marginRight="13dp"
           android:background="@drawable/home_head"
           android:scaleType="centerCrop"
           android:layout_alignTop="@+id/nickName"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true"
           android:layout_marginEnd="13dp" />

    <TextView
        android:id="@+id/nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="227dp"
        android:layout_toLeftOf="@+id/home_icon"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:text="西傻傻"/>
    <RelativeLayout
        android:id="@+id/lr_unread"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/home_icon"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible">
        <TextView
            android:id="@+id/txt_unread"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="99条未读"
            android:background="@drawable/btn"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lr_fenge"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/lr_unread">
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_d8d8d8"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="@color/gray_f5f5f5"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_d8d8d8"/>
    </LinearLayout>

</RelativeLayout>
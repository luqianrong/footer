<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.footer.widget.EaseTitleBar
        android:id="@+id/find_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/v_bg1">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_d8d8d8"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@color/gray_f5f5f5"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_d8d8d8"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp">

                <EditText
                    android:id="@+id/etContent"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/feedback_edittext_border"
                    android:textColor="@color/gray_333333"
                    android:gravity="start"
                    android:hint="这一刻的想法......"
                    android:padding="2dp"
                    android:maxLength="2000"
                    android:textColorHint="@color/gray_eaeaea"
                    android:textSize="14sp" />

            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_d8d8d8"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@color/gray_f5f5f5"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_d8d8d8"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:textColor="#333333"
                    android:text="图片"/>
                <com.example.footer.view.MyGridView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/gw"
                    android:numColumns="4"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_d8d8d8"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@color/gray_f5f5f5"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_d8d8d8"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="88dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_zdy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="16dp"
                    android:text="自定义足迹"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentBottom="true">
                    <EditText
                        android:id="@+id/et_1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"

                        android:hint="第一足迹"
                        android:textSize="14dp"
                        android:textColorHint="#b8b8b8"/>
                    <EditText
                        android:id="@+id/et_2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"

                        android:hint="第二足迹"
                        android:textSize="14dp"
                        android:textColorHint="#b8b8b8"/>
                    <EditText
                        android:id="@+id/et_3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"

                        android:hint="第三足迹"
                        android:textSize="14dp"
                        android:textColorHint="#b8b8b8"/>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/gap_0.5"
                android:background="@color/gray_d8d8d8" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:textColor="@color/gray_b8b8b8"
                android:text="足迹字数最多不得超过5个字(10个字符),
准确而又精炼的足迹才更方便别人找到。"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f5f5f5">
    <com.example.footer.widget.EaseTitleBar
        android:id="@+id/find_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/gray_f5f5f5"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_d8d8d8"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#ffffff">
        <EditText
            android:id="@+id/txt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"
            />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_d8d8d8"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_10"
        android:layout_marginLeft="@dimen/gap_10"
        android:textColor="@color/gray_d8d8d8"
        android:textSize="12dp"
        android:text="正确填写相应信息"/>
    <TextView
        android:id="@+id/txt_save"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="保存"
        android:background="@drawable/find_blue_icon"/>

</LinearLayout>
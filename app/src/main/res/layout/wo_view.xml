<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.footer.widget.EaseTitleBar
        android:id="@+id/find_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"/>
    <LinearLayout
        android:id="@+id/llGeren"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gap_100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/gap_100"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="62.5dp"
                android:layout_marginBottom="19dp"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tou"
                    android:layout_width="62.5dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/gap_19"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_head" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="私人活动"
                        android:textColor="#333333"
                        android:textSize="16dp" />
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/profile_l_zero"
                            />
                        <TextView
                            android:id="@+id/fot_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="bottom"
                            android:layout_alignParentBottom="true"
                            android:text="足迹值:6000"
                            android:textColor="#b8b8b8"
                            android:textSize="14dp" />
                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="12dp"
                android:src="@drawable/profile_right" />
        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d8d8d8" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d8d8d8" />
    <RelativeLayout
        android:id="@+id/my_foot"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/gap_44"
        android:orientation="horizontal"
        android:background="@drawable/ll_customer_selector"
        android:clickable="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gap_13"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_foot" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/gap_10"
                android:gravity="center_vertical"
                android:text="我的足迹"
                android:textColor="@color/grey_333333"
                android:textSize="@dimen/activity_header_right_textsize" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_myfoot"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/gap_15"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/profile_right" />
        </RelativeLayout>


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d8d8d8" />
    <RelativeLayout
        android:id="@+id/my_sc"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/gap_44"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gap_13">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_collect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/gap_10"
                android:gravity="center_vertical"
                android:text="我的收藏"
                android:textColor="@color/grey_333333"
                android:textSize="@dimen/activity_header_right_textsize" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_sc"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/gap_15"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/profile_right" />
        </RelativeLayout>


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d8d8d8" />

    <RelativeLayout
        android:id="@+id/set_foot"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/gap_44"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gap_13">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/gap_10"
                android:gravity="center_vertical"
                android:text="足迹设置"
                android:textColor="@color/grey_333333"
                android:textSize="@dimen/activity_header_right_textsize" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_set"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/gap_15">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/profile_right" />
        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d8d8d8" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5" />
    <RelativeLayout
        android:id="@+id/rl_about"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/gap_44"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gap_13">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_we" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/gap_10"
                android:gravity="center_vertical"
                android:text="关于足迹"
                android:textColor="@color/grey_333333"
                android:textSize="@dimen/activity_header_right_textsize" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_ft"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/gap_15">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/profile_right" />
        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d8d8d8" />

    <TextView
            android:id="@+id/etInputPhoneNumber"
            android:layout_width="fill_parent"
            android:layout_height="37dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/profile_blue_four"
            android:gravity="center"
            android:text="退出系统"
            android:textColor="#ffffff"
            android:textSize="@dimen/activity_header_right_textsize" />

</LinearLayout>
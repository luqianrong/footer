<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_jpg">
    <com.example.footer.widget.EaseTitleBar
        android:id="@+id/find_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/find_title"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:background="@drawable/login_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:text="踏破铁鞋无觅处，得来全不费工夫"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/login_icon_one">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:background="@drawable/login_my"/>
            <EditText
                android:id="@+id/etuserName"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="#ffffff"
                android:textColorHint="#b6b6b6"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/login_icon_one">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:background="@drawable/login_cipher"/>
            <EditText
                android:id="@+id/etpassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                android:textCursorDrawable="@null"
                android:inputType="textPassword"
                android:singleLine="true"
                android:maxLength="11"
                android:textColor="#ffffff"
                android:textColorHint="#b6b6b6"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_wj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:layout_marginRight="31dp"
            android:textColor="#ffffff"
            android:text="忘记密码？"/>
        <TextView
            android:id="@+id/tx_login"
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/login_icon_blue"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="登录"
            android:gravity="center"
            />
    </LinearLayout>

    <include
        android:id="@+id/loading"
        layout="@layout/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"></include>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/fd_item"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/gap_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_head"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杰伦"
                android:textColor="#333333"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:drawableLeft="@drawable/home_time"
                android:drawablePadding="5dp"
                android:text="10分钟前"
                android:textColor="#b8b8b8"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/spoorContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="翻着我们的照片，想念若隐若现，去年的冬天，我们笑得很甜......\n—— 哎哟，不错哦!"
                android:textColor="#666666"
                android:textSize="14dp" />

            //这里是仿照微信的图片显示
            <!--<com.example.footer.view.NineGridTestLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layout_nine_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:sapcing="4dp" />-->
            <!--<GridView
                android:id="@+id/grid_pic"
                android:numColumns="3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                />
-->
            <LinearLayout
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/spoorTagOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hoem_gray"
                    android:gravity="center"
                    android:text="城市"
                    android:textSize="12dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/spoorTagTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/hoem_gray"
                    android:gravity="center"
                    android:text="今天"
                    android:textSize="12dp"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/spoorTagThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/hoem_gray"
                    android:gravity="center"
                    android:text="足印"
                    android:textSize="12dp"
                    android:textColor="@color/white" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:id="@+id/lr_benefitCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_benefitCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/home_benefit"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_b8b8b8"
                            android:textSize="12dp"
                            android:text="受益"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/benefitCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/gray_b8b8b8"
                            android:text="21"
                            android:layout_marginLeft="10dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="18dp">
                        <ImageView
                            android:id="@+id/img_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/home_commentaries"
                            />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="评论"
                            android:textColor="@color/gray_b8b8b8"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/txt_1"
                            android:layout_marginLeft="10dp"
                            android:textSize="12dp"
                            android:textColor="@color/gray_b8b8b8"
                            android:text="13"

                            />
                    </LinearLayout>



                </LinearLayout>

                <TextView
                    android:id="@+id/txt_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/gap_18"
                    android:textSize="12dp"
                    android:textColor="@color/gray_b8b8b8"
                    android:text="删除"
                    android:drawableLeft="@drawable/profile_icon_deleting"
                    android:drawablePadding="10dp"/>
                <TextView
                    android:id="@+id/txt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/txt_4"
                    android:layout_marginLeft="@dimen/gap_18"
                    android:textSize="12dp"
                    android:textColor="@color/gray_b8b8b8"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="修改"
                    android:drawableLeft="@drawable/profile_icon_modification"
                    android:drawablePadding="10dp"
                    android:visibility="gone"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/gray_f5f5f5"/>


</LinearLayout>
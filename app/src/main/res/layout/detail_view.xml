<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.footer.widget.EaseTitleBar
        android:id="@+id/find_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"/>
    <RelativeLayout
        android:id="@+id/rl_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/find_title"
        android:visibility="gone">
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@color/gray_f5f5f5"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_d8d8d8"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:id="@+id/img_head"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/home_head"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/img_head"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/nickName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="#333333"
                            android:text="LV小乖乖"
                            android:layout_marginBottom="7dp"/>
                        <TextView
                            android:id="@+id/createTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/gray_b8b8b8"
                            android:text="2016-5-31 14:06"
                            android:drawableLeft="@drawable/home_time"
                            android:drawablePadding="10dp"
                            />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_d8d8d8"/>
                <LinearLayout
                    android:id="@+id/lr_tag"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/spoorTagOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hoem_gray"
                        android:gravity="center"
                        android:text="城市"
                        android:textSize="12dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/spoorTagTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/hoem_gray"
                        android:gravity="center"
                        android:text="今天"
                        android:textSize="12dp"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/spoorTagThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/hoem_gray"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:text="足印"
                        android:textColor="@color/white" />
                </LinearLayout>
                <TextView
                    android:id="@+id/spoorContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:text="翻着我们的照片，想念若隐若现，去年的冬天，我们笑得很甜......\n—— 哎哟，不错哦!"
                    android:textColor="#666666"
                    android:textSize="14dp" />
                <com.example.footer.view.PicGridView
                    android:id="@+id/photo_wall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="auto_fit"
                    android:columnWidth="108dp"
                    android:verticalSpacing="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_d8d8d8"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp">
                    <TextView
                        android:id="@+id/benefitCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/gray_b8b8b8"
                        android:textSize="14dp"
                        android:text="已受益: 99"/>
                    <!--<TextView
                        android:id="@+id/txt_sc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/gray_b8b8b8"
                        android:textSize="12dp"
                        android:text="收藏"
                        />
                    <ImageView
                        android:id="@+id/img_shoucang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/txt_sc"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/home_collect"/>

                    <TextView
                        android:id="@+id/txt_shouyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/img_shoucang"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/gray_b8b8b8"
                        android:textSize="12dp"
                        android:text="受益"
                        />
                    <ImageView
                        android:id="@+id/img_benefitCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/txt_shouyi"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/home_benefit"/>-->
                    <LinearLayout
                        android:id="@+id/lr_shoucang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:id="@+id/img_shoucang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/home_collect"/>
                        <TextView
                            android:id="@+id/txt_sc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/gray_b8b8b8"
                            android:textSize="12dp"
                            android:text="收藏"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lr_benefitCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_toLeftOf="@+id/lr_shoucang"
                        android:layout_marginRight="15dp"
                        android:layout_centerVertical="true">
                        <ImageView
                            android:id="@+id/img_benefitCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/home_benefit"/>
                        <TextView
                            android:id="@+id/txt_shouyi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/img_shoucang"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/gray_b8b8b8"
                            android:textSize="12dp"
                            android:text="受益"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#d8d8d8"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@color/gray_f5f5f5"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#d8d8d8"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="60dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="#333333"
                        android:textSize="16dp"
                        android:text="评论"/>
                    <TextView
                        android:id="@+id/tx_report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        android:textColor="#333333"
                        android:text="发表评论"/>
                </RelativeLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_d8d8d8"/>
                <LinearLayout
                    android:id="@+id/line_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    />
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/blue_3"
            android:visibility="gone"
            android:layout_alignParentBottom="true">

            <EditText
                android:id="@+id/comment_content"
                android:hint="@string/comment_content"
                android:textColor="@color/gray_b8b8b8"
                android:textColorHint="@color/gray_b8b8b8"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_width="293dp"
                android:layout_height="30dp"
                android:background="@drawable/home_frame"
                android:layout_marginLeft="12dp"/>

            <TextView
                android:id="@+id/comment_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                />
        </RelativeLayout>
    </RelativeLayout>

    <include
        android:id="@+id/loading"
        layout="@layout/loading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"></include>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f5f5f5">
    <com.example.footer.widget.EaseTitleBar
        android:id="@+id/find_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="14dp"
        android:text="当前手机号:1390123456"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="13dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="39dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="13dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"
            android:background="@drawable/profile_phone"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:hint="请输入手机号码"
            android:textSize="12dp"
            android:textColorHint="@color/gray_b8b8b8"
            android:background="@null"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp">
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="13dp"
                android:background="@drawable/login_code"/>
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:hint="请输入验证码"
                android:textColorHint="@color/gray_b8b8b8"
                android:background="@null"
                />
        </LinearLayout>
        <TextView
            android:layout_width="71dp"
            android:layout_height="fill_parent"
            android:background="@color/blue_3"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="获取验证码"/>

    </RelativeLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/blue_3"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="确定"/>


</LinearLayout>
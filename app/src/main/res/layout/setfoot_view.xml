<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:button="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.footer.widget.EaseTitleBar
        android:id="@+id/find_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/gray_d8d8d8"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_f5f5f5"/>
    <RelativeLayout
        android:id="@+id/rl_addwran_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gap_44"
        android:background="#ffffff"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="系统默认"
            android:textColor="#333333"
            android:textSize="@dimen/script_16"
            android:id="@+id/textView3" />

        <com.example.footer.views.EaseSwitchButton
            android:id="@+id/two"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            button:switchStatus="close"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignTop="@+id/textView3" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/gap_0.5"
        android:background="@color/gray_d8d8d8" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:textSize="14dp"
            android:textColor="#b8b8b8"
            android:text="开启时,以系统的方式展示足迹内容"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"
            android:textColor="#b8b8b8"
            android:text="关闭时,以自定义的方式展示足迹内容"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/gap_0.5"
        android:background="@color/gray_d8d8d8" />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="88dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_zdy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="12dp"
            android:textSize="16dp"
            android:text="自定义足迹"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentBottom="true">

            <EditText
                android:id="@+id/et_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="第一足迹"

                android:singleLine="true"
                android:textColorHint="#b8b8b8"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="第二足迹"

                android:singleLine="true"
                android:textColorHint="#b8b8b8"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/et_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="第三足迹"
                android:singleLine="true"

                android:textSize="14dp"
                android:textColorHint="#b8b8b8" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/gap_0.5"
        android:background="@color/gray_d8d8d8" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:textColor="#b8b8b8"
        android:text="最多显示3个足迹内容"/>
    <TextView
        android:id="@+id/txt_true"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/profile_blue_four"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="确定"/>
</LinearLayout>